# IndoWater IoT System - Webhook Configuration
# Copy this file to .env and update with your actual values

# Application Configuration
APP_URL=https://your-domain.com
APP_ENV=production
APP_DEBUG=false

# Database Configuration
DB_HOST=localhost
DB_NAME=indowater_iot
DB_USER=your_db_user
DB_PASS=your_db_password
DB_PORT=3306

# Midtrans Payment Gateway Configuration
# Get these from: https://dashboard.midtrans.com/ (production) or https://dashboard.sandbox.midtrans.com/ (sandbox)
MIDTRANS_SERVER_KEY=your_midtrans_server_key_here
MIDTRANS_CLIENT_KEY=your_midtrans_client_key_here
MIDTRANS_IS_PRODUCTION=false

# DOKU Payment Gateway Configuration  
# Get these from: https://dashboard.doku.com/ (production) or https://dashboard-sandbox.doku.com/ (sandbox)
DOKU_SHARED_KEY=your_doku_shared_key_here
DOKU_CLIENT_ID=your_doku_client_id_here
DOKU_IS_PRODUCTION=false

# Webhook Security (Optional)
# Generate a random string for additional webhook security
WEBHOOK_SECRET_KEY=your_random_webhook_secret_key_here

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Cache Configuration
CACHE_DRIVER=file
CACHE_PATH=cache/

# JWT Configuration (if using authentication)
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRY=3600

# Email Configuration (for notifications)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_email_password
MAIL_FROM=noreply@your-domain.com

# Webhook Configuration
WEBHOOK_TIMEOUT=30
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_RETRY_DELAY=300

# Security Configuration
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Development Configuration (set to false in production)
DISPLAY_ERROR_DETAILS=false
ENABLE_CORS=true